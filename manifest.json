{
  "manifest_version": 2,

  "name": "YoutubeNext",
  "description": "Queue youtube videos - the bare bones for max performance",
  "version": "3.0",
  "permissions": [
      "https://www.youtube.com/*",
      "contextMenus",
      "background",
      "storage",
      "tabs"
    ],
  "icons": { "200": "icon200.png"},
  "browser_action": {
     "default_popup": "popup.html"
  },
  "background": {
      "scripts": ["playnext.js"]
    },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["videoEnd.js"],
      "run_at": "document_end"
    }
  ]
}
